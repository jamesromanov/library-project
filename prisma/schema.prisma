generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// ADMIN model
model Admin {
  id String @id @default(uuid())
  name  String?
  email String @unique
  password String
  refreshToken String? @unique
  role Role
  createdAt DateTime @default(now())
}
// BOOK model
model Book {
  id String @id @default(uuid())
  title String 
  author String
  image String
  publishedYear Int
  price Int
  description String?
  format String @default("pdf")
  pages String
  language Languages
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title, price, pages, language, createdAt])
}
// APPLICAION 
model Application {
  id String @id @default(ulid())
  name String 
  phone String
  question String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}
// NEW model
model New {
  id String @id @default(ulid())
  title String 
  image String
  context String
  publication_date String
  source String
  language Languages
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([updatedAt, language, createdAt])
}


// USER role 
enum Role {
  ADMIN
}
// BOOK | NEWS languages 
enum Languages {
  RU 
  EN 
  UZ 
}
